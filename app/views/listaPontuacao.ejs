<!DOCTYPE html>
<meta charset="utf-8">
<html>
<head>
	<title>CRUD de Notícias</title>
	<!-- Este é o estilo do Boostrap -->
  <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/html" href="/css/datatables.min.css">  
</head>
<body>

<main>	
	
  <div class="container col-8">
    <h1 class="text-center">Lista de Pontuação</h1>
      <table class="table table-striped table-bordered table-dark">
    <thead>

      <tr scope="col">
        <th>ID</th>
        <th>Pontuação</th>
        <th>Nome</th>
      </tr>

    </thead>

    <tbody>
     
           <% for (var i=0; i < lista.length; i++) { %>
      <tr>

        <td><%= lista[i].id %></td> 
        <td><%= lista[i].pontuacao %></td> 
        <td><%= lista[i].nome %></td> 
      
      </tr>
      <% } %>
    </tbody>
  </table>

    <button onclick="voltar()" class="btn-info btn-inline-block col-2">Voltar</button>
    <!--
    <button type="button" class="btn btn-success btn-inline-block col-2" id="add">Adicionar</button>
    -->
  </div>
  

</main>

</body>

<script src="/js/jquery.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script src="/js/helper.js"></script>

